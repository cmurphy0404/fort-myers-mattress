---
import Layout from '../layouts/Layout.astro';
import AppointmentForm from '../components/AppointmentForm.astro';
import { siteConfig } from '../config';

const isSuccess = Astro.url.searchParams.get('success') === 'true';
---

<Layout
  title="Book Appointment | Mattress Store Fort Myers FL"
  description="Schedule your free private mattress shopping appointment in Fort Myers, Cape Coral or Southwest Florida. No pressure, personalized guidance. Call (239) 200-6022 or book online."
>
  <section class="section-padding bg-gradient-to-br from-blue-50 via-white to-gray-50">
    <div class="container-narrow">
      <div class="text-center mb-8 sm:mb-12">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-3 sm:mb-4">
          Book Your Appointment
        </h1>
        <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto px-4 sm:px-0">
          Schedule a private, one-on-one mattress shopping experience. We'll confirm your appointment by phone or text.
        </p>
      </div>

      <!-- Success Message -->
      {isSuccess && (
        <div class="bg-green-50 border border-green-200 rounded-xl p-6 mb-8">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <div>
              <h2 class="text-lg font-semibold text-green-900 mb-1">Request Received!</h2>
              <p class="text-green-700">
                Thank you for your appointment request. We'll contact you within 24 hours to confirm your time.
              </p>
            </div>
          </div>
        </div>
      )}

      <!-- Quick Contact Buttons -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4 sm:p-6 mb-6 sm:mb-8">
        <p class="text-center text-gray-600 mb-3 sm:mb-4 text-sm sm:text-base">
          Prefer to reach us directly?
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
          <a href={`tel:${siteConfig.phoneRaw}`} class="btn-call text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4 justify-center w-full sm:w-auto touch-active">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call {siteConfig.phone}
          </a>
          <a href={`sms:${siteConfig.phoneRaw}`} class="btn-text text-base sm:text-lg px-6 sm:px-8 py-3 sm:py-4 justify-center w-full sm:w-auto touch-active">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Text {siteConfig.phone}
          </a>
        </div>
      </div>

      <!-- Form -->
      {!isSuccess && (
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-5 sm:p-6 md:p-8">
          <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-5 sm:mb-6">Request an Appointment</h2>
          <AppointmentForm />
        </div>
      )}

      <!-- Info -->
      <div class="mt-8 sm:mt-12 grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 text-center">
        <div class="p-3 sm:p-4">
          <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-2 sm:mb-3 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-1 text-sm sm:text-base">Flexible Scheduling</h3>
          <p class="text-xs sm:text-sm text-gray-600">We work around your schedule</p>
        </div>
        <div class="p-3 sm:p-4">
          <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-2 sm:mb-3 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-1 text-sm sm:text-base">Quick Confirmation</h3>
          <p class="text-xs sm:text-sm text-gray-600">We'll reach out within 24 hours</p>
        </div>
        <div class="p-3 sm:p-4">
          <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-2 sm:mb-3 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-1 text-sm sm:text-base">No Pressure</h3>
          <p class="text-xs sm:text-sm text-gray-600">Browse at your own pace</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
