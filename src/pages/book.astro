<Layout
  title="Book Appointment | Mattress Store Fort Myers FL"
  description="Schedule your free private mattress shopping appointment in Fort Myers, Cape Coral or Southwest Florida. No pressure, personalized guidance. Call (239) 200-6022 today!"
>
  <!-- Hero Section -->
  <section class="py-10 sm:py-14 md:py-20 bg-gradient-to-br from-blue-50 via-white to-gray-50">
    <div class="container-wide text-center">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-4 sm:mb-6">
        Ready for Better Sleep?
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-2xl mx-auto mb-8 sm:mb-10 px-4">
        Give us a call to schedule your private, no-pressure mattress shopping experience.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mb-8 px-4">
        <a href={`tel:${siteConfig.phoneRaw}`} class="btn-primary text-lg sm:text-xl px-8 sm:px-10 py-4 sm:py-5 w-full sm:w-auto touch-active">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call {siteConfig.phone}
        </a>
        <a href={`sms:${siteConfig.phoneRaw}`} class="btn-secondary text-lg sm:text-xl px-8 sm:px-10 py-4 sm:py-5 w-full sm:w-auto touch-active">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          Text Us
        </a>
      </div>

      <!-- Info Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 max-w-3xl mx-auto px-4">
        <div class="bg-white rounded-xl p-4 sm:p-5 shadow-sm border border-gray-100">
          <div class="w-10 h-10 mx-auto mb-3 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 text-sm sm:text-base">Flexible Hours</h3>
          <p class="text-xs sm:text-sm text-gray-600 mt-1">We work around your schedule</p>
        </div>
        <div class="bg-white rounded-xl p-4 sm:p-5 shadow-sm border border-gray-100">
          <div class="w-10 h-10 mx-auto mb-3 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 text-sm sm:text-base">Private Showroom</h3>
          <p class="text-xs sm:text-sm text-gray-600 mt-1">Just you, no crowds</p>
        </div>
        <div class="bg-white rounded-xl p-4 sm:p-5 shadow-sm border border-gray-100">
          <div class="w-10 h-10 mx-auto mb-3 bg-amber-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 text-sm sm:text-base">No Pressure</h3>
          <p class="text-xs sm:text-sm text-gray-600 mt-1">Take your time</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Dream Wall Section -->
  <section class="py-10 sm:py-14 md:py-20 bg-white">
    <div class="container-wide">
      <div class="text-center mb-8 sm:mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-3 sm:mb-4">
          The Dream Wall
        </h2>
        <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto px-4">
          Our happy customers with their new mattresses. You could be next!
        </p>
      </div>

      <!-- Photo Grid -->
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-2 sm:gap-3 md:gap-4">
        {clientImages.map((image, index) => (
          <div class="aspect-square overflow-hidden rounded-lg sm:rounded-xl bg-gray-100 hover:shadow-lg transition-shadow duration-300">
            <img
              src={`/images/client-wall/${image}`}
              alt={`Happy customer ${index + 1} with their new mattress from Fort Myers Mattress`}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              loading="lazy"
              width="300"
              height="300"
              decoding="async"
            />
          </div>
        ))}
      </div>

      <!-- Bottom CTA -->
      <div class="text-center mt-10 sm:mt-14">
        <p class="text-gray-600 mb-4 sm:mb-6 text-base sm:text-lg">
          Ready to join our wall of happy sleepers?
        </p>
        <a href={`tel:${siteConfig.phoneRaw}`} class="btn-primary text-lg px-8 py-4 touch-active inline-flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call to Book Your Appointment
        </a>
      </div>
    </div>
  </section>
</Layout>
