---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config';

const city = 'Cape Coral';
const nearbyAreas = ['Fort Myers', 'North Fort Myers', 'Pine Island', 'Sanibel'];
---

<Layout
  title={`Mattress Store ${city} FL | Save 50-80% | Free Delivery`}
  description={`${city}'s best mattress deals - save 50-80% off retail! Private, no-pressure shopping by appointment. Same-day delivery to ${city}. Tempur, Diamond & more. Call (239) 200-6022!`}
>
  <!-- Hero Section -->
  <section class="py-12 sm:py-16 md:py-20 bg-gradient-to-br from-blue-50 via-white to-gray-50">
    <div class="container-wide text-center">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-4 sm:mb-6">
        Mattress Store Serving {city}
      </h1>
      <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-2xl mx-auto mb-8">
        Save 50-80% on quality mattresses with free delivery to {city}.
        Private appointments, no pressure, top brands.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
        <a href={`tel:${siteConfig.phoneRaw}`} class="btn-primary text-lg px-8 py-4">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Call {siteConfig.phone}
        </a>
        <a href="/book" class="btn-secondary text-lg px-8 py-4">
          Book Appointment
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us for City -->
  <section class="py-12 sm:py-16 bg-white">
    <div class="container-narrow">
      <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 text-center mb-8">
        Why {city} Residents Choose Us
      </h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-gray-50 rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-green-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Save 50-80%</h3>
          <p class="text-gray-600 text-sm">Same brands as big box stores at warehouse-direct prices</p>
        </div>
        <div class="bg-gray-50 rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 bg-blue-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Free {city} Delivery</h3>
          <p class="text-gray-600 text-sm">Same-day delivery available throughout {city}</p>
        </div>
        <div class="bg-gray-50 rounded-xl p-6 text-center sm:col-span-2 lg:col-span-1">
          <div class="w-12 h-12 mx-auto mb-4 bg-amber-100 rounded-full flex items-center justify-center">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Private Showroom</h3>
          <p class="text-gray-600 text-sm">No crowds, no pressure — the showroom is all yours</p>
        </div>
      </div>
    </div>
  </section>

  <!-- About Our Service to This Area -->
  <section class="py-12 sm:py-16 bg-gray-50">
    <div class="container-narrow">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-6">
          Serving {city} for Over 7 Years
        </h2>
        <p class="text-gray-600 mb-4">
          Located just a short drive from {city}, Fort Myers Mattress By Appointment has been helping
          {city} residents sleep better for less since 2018. Our by-appointment model means you get
          personalized attention and warehouse-direct pricing without the big box store markup.
        </p>
        <p class="text-gray-600 mb-6">
          We carry top brands including Tempur and Diamond in all comfort levels — from extra firm
          to plush pillow-top. Whether you need a king, queen, or twin, we have options for every
          budget and sleep style.
        </p>
        <p class="text-gray-600">
          Need financing? No problem. We offer payment plans with just $20 down and no credit check required.
        </p>
      </div>
    </div>
  </section>

  <!-- Nearby Areas -->
  <section class="py-12 bg-white">
    <div class="container-narrow text-center">
      <h2 class="text-xl font-bold text-gray-900 mb-4">Also Serving Nearby Areas</h2>
      <div class="flex flex-wrap justify-center gap-2">
        {nearbyAreas.map((area) => (
          <span class="px-4 py-2 bg-gray-100 rounded-full text-gray-700 text-sm">{area}</span>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-12 sm:py-16 bg-accent">
    <div class="container-narrow text-center">
      <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4">
        Ready to Save on Your New Mattress?
      </h2>
      <p class="text-blue-100 mb-8 max-w-xl mx-auto">
        Call now to schedule your private appointment. Free delivery to {city} available.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={`tel:${siteConfig.phoneRaw}`} class="inline-flex items-center justify-center px-8 py-4 bg-white text-accent font-semibold rounded-lg hover:bg-gray-100 transition-colors text-lg">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          {siteConfig.phone}
        </a>
        <a href="/book" class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-semibold rounded-lg border-2 border-white hover:bg-white/10 transition-colors text-lg">
          Book Appointment
        </a>
      </div>
    </div>
  </section>
</Layout>
