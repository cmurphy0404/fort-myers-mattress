---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ValueProps from '../components/ValueProps.astro';
import HowItWorks from '../components/HowItWorks.astro';
import WhatWeCarry from '../components/WhatWeCarry.astro';
import BrandsBanner from '../components/BrandsBanner.astro';
import Testimonials from '../components/Testimonials.astro';
import LocationBlock from '../components/LocationBlock.astro';
import { siteConfig } from '../config';
---

<Layout
  title="Mattress Store Fort Myers FL | Mattress by Appointment"
  description="Fort Myers Mattress By Appointment - private, no-pressure mattress shopping in Fort Myers, Cape Coral & Southwest Florida. Quality mattresses at warehouse-direct prices. Book your free appointment today!"
>
  <Hero />
  <ValueProps />
  <HowItWorks />
  <WhatWeCarry />
  <BrandsBanner />
  <Testimonials />

  <!-- Mattress by Appointment Section -->
  <section class="py-12 bg-gray-50 border-y border-gray-200">
    <div class="container-narrow">
      <div class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-10">
        <img
          src="/images/MBA-MainHorizontalLogo-Red_Gray.png"
          alt="Mattress by Appointment"
          class="h-14 md:h-16 w-auto"
        />
        <div class="text-center md:text-left max-w-xl">
          <p class="text-gray-700">
            <span class="font-semibold">Fort Myers Mattress</span> is a proud member of the
            <span class="font-semibold">Mattress by Appointment</span> family â€” a nationwide network
            of locally owned showrooms offering quality mattresses at warehouse-direct prices.
          </p>
        </div>
      </div>
      {siteConfig.socials.facebook && (
        <div class="mt-6 text-center">
          <a
            href={siteConfig.socials.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Follow us on Facebook
          </a>
        </div>
      )}
    </div>
  </section>

  <LocationBlock />
</Layout>
