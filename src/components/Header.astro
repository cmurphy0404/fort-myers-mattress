---
import { siteConfig } from '../config';

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About & FAQ' },
  { href: '/book', label: 'Book Appointment' },
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100 shadow-sm safe-area-top">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 safe-area-x">
    <div class="flex items-center justify-between h-14 sm:h-16 md:h-20">
      <!-- Site Name -->
      <a href="/" class="flex items-center shrink-0 py-2 ml-1 sm:ml-0">
        <span class="font-bold text-gray-900 text-[13px] sm:text-base leading-tight">
          Fort Myers Mattress
        </span>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden lg:flex items-center gap-6">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors py-2',
              currentPath === link.href
                ? 'text-accent'
                : 'text-gray-600 hover:text-accent',
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="flex items-center gap-2 sm:gap-3">
        <!-- Call Button -->
        <a
          href={`tel:${siteConfig.phoneRaw}`}
          class="inline-flex items-center justify-center h-9 sm:h-10 px-3 sm:px-4 bg-green-600 text-white text-sm font-medium rounded-lg hover:bg-green-700 active:bg-green-800 transition-colors"
          aria-label="Call us"
        >
          <svg class="w-4 h-4 sm:mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="hidden sm:inline">Call</span>
        </a>

        <!-- Book Button -->
        <a
          href="/book"
          class="inline-flex items-center justify-center h-9 sm:h-10 px-4 sm:px-5 bg-accent text-white text-sm font-semibold rounded-lg hover:bg-accent-dark active:opacity-90 transition-colors"
        >
          Book
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden inline-flex items-center justify-center w-9 h-9 text-gray-600 hover:text-accent hover:bg-gray-100 active:bg-gray-200 rounded-lg transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden pb-5 pt-3 border-t border-gray-100 mt-2">
      <div class="flex flex-col gap-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'flex items-center px-4 py-3 rounded-lg text-base font-medium transition-colors',
              currentPath === link.href
                ? 'bg-accent/10 text-accent'
                : 'text-gray-700 hover:bg-gray-50 active:bg-gray-100',
            ]}
          >
            {link.label}
          </a>
        ))}
        <!-- Quick Actions in Mobile Menu -->
        <div class="flex gap-2 mt-3 px-2">
          <a
            href={`tel:${siteConfig.phoneRaw}`}
            class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 active:bg-green-800 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call Now
          </a>
          <a
            href={`sms:${siteConfig.phoneRaw}`}
            class="flex-1 inline-flex items-center justify-center gap-2 px-4 py-3 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 active:bg-gray-300 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Text Us
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
