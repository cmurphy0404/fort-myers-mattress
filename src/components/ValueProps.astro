---
const valueProps = [
  {
    icon: 'calendar',
    title: 'One-on-One Appointment',
    description: 'Private shopping experience with personalized attention. No crowds, no waiting.',
  },
  {
    icon: 'dollar',
    title: 'Straightforward Pricing',
    description: 'Clear, honest pricing without confusing sales tactics or hidden fees.',
  },
  {
    icon: 'truck',
    title: 'Local Pickup & Delivery Options',
    description: 'Convenient options to get your mattress home—pickup or delivery available.',
  },
];
---

<section class="section-padding bg-white">
  <div class="container-wide">
    <div class="text-center mb-8 sm:mb-12">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-3 sm:mb-4">
        Why Shop By Appointment?
      </h2>
      <p class="text-base sm:text-lg text-gray-600 max-w-2xl mx-auto px-4">
        A better way to find your perfect mattress—on your schedule.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4 sm:gap-6 md:gap-8">
      {valueProps.map((prop) => (
        <div class="text-center p-5 sm:p-6 rounded-2xl bg-gray-50 hover:bg-blue-50 transition-colors duration-300">
          <div class="w-14 h-14 sm:w-16 sm:h-16 mx-auto mb-4 sm:mb-6 bg-accent/10 rounded-full flex items-center justify-center">
            {prop.icon === 'calendar' && (
              <svg class="w-7 h-7 sm:w-8 sm:h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            )}
            {prop.icon === 'dollar' && (
              <svg class="w-7 h-7 sm:w-8 sm:h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            )}
            {prop.icon === 'truck' && (
              <svg class="w-7 h-7 sm:w-8 sm:h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h.01M8 11h.01M8 15h.01M12 7h.01M12 11h.01M12 15h.01M16 7h.01M16 11h.01M16 15h.01M5 3h14a2 2 0 012 2v14a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 3v18"/>
              </svg>
            )}
          </div>
          <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2 sm:mb-3">{prop.title}</h3>
          <p class="text-sm sm:text-base text-gray-600">{prop.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
