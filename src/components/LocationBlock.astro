---
import { siteConfig } from '../config';
---

<section class="section-padding bg-white">
  <div class="container-wide">
    <div class="grid lg:grid-cols-2 gap-6 sm:gap-8 lg:gap-12 items-center">
      <!-- Map -->
      <div class="order-2 lg:order-1">
        <div class="rounded-2xl overflow-hidden shadow-xl bg-gray-100 aspect-[4/3]">
          <iframe
            src={siteConfig.googleMapsEmbed}
            width="100%"
            height="100%"
            style="border:0; min-height: 280px;"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Fort Myers Mattress By Appointment Location"
          ></iframe>
        </div>
      </div>

      <!-- Content -->
      <div class="order-1 lg:order-2">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-4 sm:mb-6">
          Visit Our Showroom
        </h2>
        <div class="space-y-4 sm:space-y-6">
          <!-- Address -->
          <div class="flex items-start gap-3 sm:gap-4">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1 text-sm sm:text-base">Address</h3>
              <p class="text-gray-600 text-sm sm:text-base">
                {siteConfig.address.street}<br />
                {siteConfig.address.city}, {siteConfig.address.state} {siteConfig.address.zip}
              </p>
            </div>
          </div>

          <!-- Phone -->
          <div class="flex items-start gap-3 sm:gap-4">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1 text-sm sm:text-base">Phone</h3>
              <a href={`tel:${siteConfig.phoneRaw}`} class="text-accent hover:underline text-sm sm:text-base">
                {siteConfig.phone}
              </a>
            </div>
          </div>

          <!-- Hours -->
          <div class="flex items-start gap-3 sm:gap-4">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-accent/10 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 mb-1 text-sm sm:text-base">Hours</h3>
              <p class="text-gray-600 text-sm sm:text-base">{siteConfig.hours.note}</p>
            </div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 mt-6 sm:mt-8">
          <a
            href={siteConfig.googleMapsLink}
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary w-full sm:w-auto touch-active"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
            </svg>
            Get Directions
          </a>
          <a href="/book" class="btn-primary w-full sm:w-auto touch-active">
            Book Appointment
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
