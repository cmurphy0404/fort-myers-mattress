---
import { siteConfig } from '../config';

const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white safe-area-bottom">
  <div class="container-wide py-10 sm:py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 sm:gap-10 md:gap-12">
      <!-- Brand & Contact -->
      <div>
        <div class="mb-4">
          <img
            src="/images/MBA-MainHorizontalLogo-Red_Gray.png"
            alt="Mattress by Appointment"
            class="h-12 w-auto mb-3 bg-white rounded p-2"
          />
          <p class="text-sm text-gray-300">Proud member of the Mattress by Appointment family</p>
        </div>
        <p class="text-gray-400 text-sm mb-4">
          Private, no-pressure mattress shopping by appointment in Fort Myers, Florida.
        </p>
        {siteConfig.socials.facebook && (
          <a
            href={siteConfig.socials.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-gray-400 hover:text-blue-400 text-sm transition-colors mb-4"
            aria-label="Follow us on Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
            Follow us on Facebook
          </a>
        )}
        <div class="flex flex-wrap gap-2 sm:gap-3">
          <a href={`tel:${siteConfig.phoneRaw}`} class="btn-call text-sm touch-active">
            <svg class="w-4 h-4 mr-1.5 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call Us
          </a>
          <a href={`sms:${siteConfig.phoneRaw}`} class="btn-text text-sm touch-active">
            <svg class="w-4 h-4 mr-1.5 sm:mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Text Us
          </a>
        </div>
      </div>

      <!-- Address & Hours -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Location</h3>
        <address class="not-italic text-gray-400 text-sm mb-4">
          <p>{siteConfig.address.street}</p>
          <p>{siteConfig.address.city}, {siteConfig.address.state} {siteConfig.address.zip}</p>
        </address>
        <a
          href={siteConfig.googleMapsLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-blue-400 hover:text-blue-300 text-sm transition-colors"
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Get Directions
        </a>
        <div class="mt-4">
          <p class="text-gray-400 text-sm font-medium">Hours</p>
          <p class="text-white text-sm">{siteConfig.hours.note}</p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-lg mb-4">Quick Links</h3>
        <nav class="flex flex-col gap-2">
          <a href="/" class="text-gray-400 hover:text-white text-sm transition-colors">Home</a>
          <a href="/book" class="text-gray-400 hover:text-white text-sm transition-colors">Book Appointment</a>
          <a href="/about" class="text-gray-400 hover:text-white text-sm transition-colors">About & FAQ</a>
        </nav>
        <div class="mt-5 sm:mt-6">
          <a href="/book" class="btn-primary text-sm w-full sm:w-auto touch-active">
            Book Your Appointment
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-8 sm:mt-12 pt-6 sm:pt-8 border-t border-gray-800">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-3 sm:gap-4">
        <p class="text-gray-500 text-xs sm:text-sm text-center sm:text-left">
          © {currentYear} {siteConfig.businessName}. All rights reserved.
        </p>
        <p class="text-gray-500 text-xs sm:text-sm text-center sm:text-right">
          <a href={`tel:${siteConfig.phoneRaw}`} class="hover:text-white transition-colors">
            {siteConfig.phone}
          </a>
          <span class="mx-2">•</span>
          <span>By Appointment Only</span>
        </p>
      </div>
    </div>
  </div>
</footer>
