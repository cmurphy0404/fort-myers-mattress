---
const brands = [
  { src: '/images/brand-1.webp', alt: 'Mattress brand partner logo', name: 'Partner Brand' },
  { src: '/images/brand-2.webp', alt: 'Mattress brand partner logo', name: 'Partner Brand' },
  { src: '/images/brand-3.webp', alt: 'Tempur mattress brand logo', name: 'Tempur' },
  { src: '/images/brand-4.webp', alt: 'Diamond mattress brand logo', name: 'Diamond' },
];
---

<section class="py-8 sm:py-10 md:py-12 bg-white" aria-label="Trusted mattress brands we carry">
  <div class="container-wide">
    <h2 class="sr-only">Our Trusted Brand Partners</h2>
    <p class="text-center text-xs sm:text-sm md:text-base font-semibold text-gray-500 uppercase tracking-wider mb-6 sm:mb-8">
      Trusted Brands We Carry
    </p>
    <div class="flex flex-wrap items-center justify-center gap-8 sm:gap-12 md:gap-16 lg:gap-20">
      {brands.map((brand) => (
        <img
          src={brand.src}
          alt={brand.alt}
          title={brand.name}
          class="h-12 sm:h-14 md:h-16 lg:h-20 w-auto max-w-[120px] sm:max-w-[150px] md:max-w-[180px] object-contain hover:scale-105 transition-transform duration-300"
          loading="lazy"
          width="150"
          height="60"
          decoding="async"
        />
      ))}
    </div>
  </div>
</section>
