---
const products = [
  {
    name: 'Mattresses',
    image: '/images/products/mattresses.png',
  },
  {
    name: 'Adjustable Bases',
    image: '/images/products/adjustable-bases.png',
  },
  {
    name: 'Hi-Rise Platforms',
    image: '/images/products/hirise-platforms.png',
  },
  {
    name: 'Pillows',
    image: '/images/products/pillows.png',
  },
  {
    name: 'Protectors',
    image: '/images/products/protectors.png',
  },
];
---

<section class="section-padding bg-white">
  <div class="container-wide">
    <div class="text-center mb-10 sm:mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 font-display">
        What We Carry
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        A curated selection of quality sleep products.
      </p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-6 sm:gap-8">
      {products.map((product) => (
        <div class="group cursor-pointer">
          <div class="aspect-square overflow-hidden rounded-xl mb-4 bg-gray-100 shadow-sm group-hover:shadow-md transition-shadow duration-300 relative">
             <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-300 z-10"/>
             <img
              src={product.image}
              alt={product.name}
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
          </div>
          <h3 class="text-lg sm:text-xl font-bold text-gray-900 text-center font-display">
            {product.name}
          </h3>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <p class="text-gray-500 text-sm mb-6">
        Not sure what you need? We'll help you find the right fit during your appointment.
      </p>
      <a href="/book" class="btn-primary">
        Schedule Your Visit
      </a>
    </div>
  </div>
</section>
